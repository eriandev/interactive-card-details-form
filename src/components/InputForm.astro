---
import type { HTMLAttributes } from "astro/types";
import ErrorMessage from "./ErrorMessage.astro";
import Label from "./Label.astro";

interface Props extends HTMLAttributes<"input"> {
  label?: string;
  withError?: boolean;
}

const { id, label, withError, class: customCssClasses, ...attrs } = Astro.props;
---

<div class={customCssClasses}>
  {label ? <Label for={id}>{label}</Label> : null}
  <input
    id={id}
    class="w-full cursor-pointer rounded-md border border-light-grayish-violet py-2 px-3 font-medium outline-none placeholder:text-light-grayish-violet focus:border-violet"
    {...attrs}
  />
  {withError ? <ErrorMessage id={id} /> : null}
</div>
